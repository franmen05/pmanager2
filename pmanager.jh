
/**
 * Task entity.
 * @author The JHipster team.
 */
 
enum Status {
  REGISTER, FINSHED ,CANCELLED
}

/**
 * The Patient entity.
 */
entity Patient {

    
	/**
	* The firstname attribute.
	*/
	firstName String required
	lastName String  required
	email String unique
	phoneNumber String
    whatsapp String
    cellNumber String
    emergencyNumber String
    address String required
	birthDate Instant
	createDate Instant  
    createDate Instant 
}

entity Record{
  description String required 
  createDate Instant
  lastUpdateDate Instant required

}

entity RecordItem{
  description String required 
  createDate Instant
  lastUpdateDate Instant required

}

entity Prescription {

	description String required 
	createDate Instant
  	lastUpdateDate Instant required
}

entity MedicalHistory {
	
	comment String required 
	createDate Instant
  	lastUpdateDate Instant required
}

entity MedicalHistoryConfig {
	
    key String required
	description String required 
	createDate Instant
  	lastUpdateDate Instant required
}

entity Turn {
	
	position Integer required 
	createDate Instant
  	lastUpdateDate Instant required
    status Status required
}

// defining multiple OneToMany relationships with comments
relationship OneToMany {

	Patient{record} to Record
    Patient{turn} to Turn
    
    Record{item} to RecordItem
    RecordItem{presciption} to Prescription
    Record{medicalHistory} to MedicalHistory
    MedicalHistory{medicalHistory} to MedicalHistoryConfig
}

relationship ManyToOne {
	Record{patient} to Patient
    Turn{patient} to Patient
}

//relationship OneToOne{
//	NCF{invoice} to Invoice
//}  

// Set pagination options
paginate Patient with pagination
paginate Turn with infinite-scroll
// paginate JobHistory, Employee with infinite-scroll
// paginate Job with pagination

// Use Data Transfert Objects (DTO)
dto Patient with mapstruct
// dto * with mapstruct

// Set service options to all except few
service all with serviceImpl

